<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
		<style>		
			@Each.Model.Css
				@Current
			@EndEach
		</style>
		<title>@Model.Title | @Model.Subtitle</title>
	</head>
	<body>
		<div style="margin: 2em; text-align: center;">
			@If.Model.Error
				File extentions is not supported!<br/><br/>
				<button onclick="window.close()">Close</button>
			@EndIf
			@IfNot.Model.Error
				@If.Model.Uploaded
					<table style="width: 100%">
						<tr><td>Link</td><td style="width: 100%"><input class="tf" disabled type="text" name="Name" style="font-size: 1em;" value="@Model.LinkSyntax"/></td></tr>
						<tr><td>Image</td><td style="width: 100%"><input class="tf" disabled type="text" name="Name" style="font-size: 1em;" value="@Model.ImageSyntax"/></td></tr>
					</table>
					<br/>
					<button onclick="window.close()">Close</button>
				@EndIf
				@IfNot.Model.Uploaded
					<form action="@Path['~/upload']" method="POST" enctype="multipart/form-data">
						<input name="upload" type="file" size="40" style="width: 100%;"/><br/><br/>
						<input type="submit" value="Post!"/>
					</form>
				@EndIf
			@EndIf
		</div>
	<body>
</html>
